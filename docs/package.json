{
  "name": "smartblock-api-docs",
  "version": "0.0.1",
  "description": "Static site generator with a Single Page Application (NextJS!)",
  "scripts": {
    "start": "next",
    "publish": "npm run slides:pre-cleanup && npm run slides:prod-build && npm run slides:export && npm run slides:publish && npm run slides:cleanup",
    "slides:prod-build": "export SPA_EXP_BUILD=true && next build",
    "slides:export": "next export -o dist && cp ./_config.yml dist/_config.yml",
    "slides:publish": "subpath-as-branch -p dist -b gh-pages",
    "slides:cleanup": "rm -rf dist",
    "slides:pre-cleanup": "rm -rf .next dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SmartblockTech/API-Docs.git"
  },
  "author": "Smartblock Technologies SpA",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SmartblockTech/API-Docs/issues"
  },
  "homepage": "https://github.com/SmartblockTech/API-Docs#readme",
  "devDependencies": {
    "@zeit/next-sass": "~1.0.1",
    "compression-webpack-plugin": "^3.1.0",
    "file-loader": "~4.2.0",
    "next": "^9.1.7",
    "node-sass": "~4.12.0",
    "react": "~16.9.0",
    "react-dom": "~16.9.0",
    "subpath-as-branch": "~1.0.0",
    "url-loader": "~2.1.0"
  }
}
